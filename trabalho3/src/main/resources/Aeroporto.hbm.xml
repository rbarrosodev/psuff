<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.rodrigobarroso.models.Aeroporto" table="aeroporto" dynamic-insert="true" dynamic-update="true">
        <id name="id" type="long">
            <column name="id" />
            <generator class="increment" />
        </id>
        <property name="codigo" type="string">
            <column name="codigo" />
        </property>
        <property name="endereco" type="string">
            <column name="endereco" />
        </property>
        <property name="nome" type="string">
            <column name="nome" />
        </property>
        <property name="qtdPistas" type="integer">
            <column name="qtdPistas" />
        </property>
        <property name="qtdCompanhias" type="integer">
            <column name="qtdCompanhias" />
        </property>
    </class>
</hibernate-mapping>